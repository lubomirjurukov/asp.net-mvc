@model Snippy.App.Models.ViewModels.CommentViewModel

@{
    ViewBag.Title = "Delete Comment";
}

<h2>Delete Comment</h2>
<p>Are you sure you want to delete this comment?</p>
@Html.DisplayFor(x => x)
@Html.ActionLink("Delete", "RealDelete", "Comment", new { id = Model.Id }, new { @class = "btn btn-danger" })
@Html.ActionLink("Cancel", "CancelDelete", "Comment", new { id = Model.Id }, new { @class = "btn btn-default" })

